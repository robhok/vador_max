{% if menu %}
	<ul class="nav-list">
	{% for item in menu %}
		<li class="nav-item inline {{item.classes | join(' ')|upper }}">
      {% if item.title == 'Home' %}
        <a href="{{item.get_link}}">
          <img src="{{image_header|resize(50, 50)}}" alt="">
        </a>
        {% include "menu.twig" with {'menu': item.get_children} %}
      {% else %}
  			<a href="{{item.get_link}}">{{item.title}}</a>
  			{% include "menu.twig" with {'menu': item.get_children} %}
      {% endif %}
		</li>
	{% endfor %}
	</ul>
{% endif %}
