{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
      {% if image_fullscreen %}
        <div class="cover-image-container">
          <img src="{{image_fullscreen.src}}"/>
        </div>
      {% endif %}
			<section class="article-content">
				<div class="article-body main-content pt-bt white-bg">
          <h1 class="article-h1">{{post.title}}</h1>
          {{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
